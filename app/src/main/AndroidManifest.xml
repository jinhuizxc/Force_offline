<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.forcequit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

     <!-- 在非Activity组件中弹出对话框，需要设置 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ChatActivity"></activity>
        <activity android:name=".activity.FriendListActivity"></activity>
        
      
          
        <receiver android:name="ForceQuitReceiver">
              <intent-filter >               
                <action android:name="com.example.forcequit.ForceQuitReceiver"/>
            </intent-filter>
                  
        </receiver>
            
            
       
    </application>

</manifest>
